<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/whatsapp_messenger/db" VERSION="20240113" COMMENT="XMLDB file for Moodle block_whatsapp_messenger"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_whatsapp_messages" COMMENT="Stores WhatsApp messages sent to students">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Course ID"/>
        <FIELD NAME="senderid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="User ID of sender"/>
        <FIELD NAME="recipientid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="User ID of recipient"/>
        <FIELD NAME="message" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Message content"/>
        <FIELD NAME="phonenumber" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" COMMENT="Recipient phone number"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="sent" SEQUENCE="false" COMMENT="Message status"/>
        <FIELD NAME="whatsapp_message_id" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="WhatsApp API message ID"/>
        <FIELD NAME="error_message" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Error message if failed"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Time created"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="courseid" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
        <KEY NAME="senderid" TYPE="foreign" FIELDS="senderid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="recipientid" TYPE="foreign" FIELDS="recipientid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="courseid_idx" UNIQUE="false" FIELDS="courseid"/>
        <INDEX NAME="senderid_idx" UNIQUE="false" FIELDS="senderid"/>
        <INDEX NAME="recipientid_idx" UNIQUE="false" FIELDS="recipientid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
